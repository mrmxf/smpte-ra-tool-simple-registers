{
    "configDescription": "Devlopment configuration from config/config-defaults.json",
    "DEBUG": false,
    "serverName": "SMPTE RA Simple Registers Framework",
    "serverNameShort": "RA-SR",
    "home": {
        "appTitle": "Simple Registers Framework",
        "appDescriptionMD": "**Alpha** release of the Simple Register Tool",
        "version": "2.0.0",
        "path": {
            "static": "./public",
            "template": "index.template.html",
            "narrative": "homepage.md"
        }
    },
    "version": "0.9.2",
    "port": 3000,
    "urlPrefix": "/smpte-ra-demo/",
    "registersPrefix": "register",
    "registersFolderPath":"registers",
    "uploadFolderPath": "/tmp",
    "homeIconClass": "green",
    "logging": {
        "doc": "logging goes to stderr by default - see https://github.com/pinojs/pino/blob/HEAD/docs/transports.md",
        "level": "info",
        "logRequests": true,
        "transport": {
            "targets": [{
                "level":"debug",
                "target": "pino/file",
                "options": {
                    "destination": 2,
                    "_help": "1=stderr, 2=stdout"
                }
            },{
                "level":"trace",
                "target": "pino/file",
                "options": {
                    "destination": "tmp-log-output.log",
                    "_help": "1=stderr, 2=stdout"
                }
            }]

        }
    }
}