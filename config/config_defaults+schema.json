{
    "_help": {
        "format": "String",
        "default": "Default configuration from config/config_defaults+schema.json"
    },
    "DEBUG": {
        "format": "Boolean",
        "default": false,
        "doc": "Turns on verbose logging and other integrity checks for new plugins"
    },
    "server_name": {
        "format": "String",
        "default": "SMPTE RA Tool - Simple Registers"
    },
    "short_server_name": {
        "format": "String",
        "default": "RA-SR"
    },
    "home": {
        "doc": "This section has the same format as a register config, but renders the home page instead",
        "format": "Object",
        "default": {
            "doc": "configuration for the home page (i.e. no register selected)",
            "app_title": "SMPTE RA Tool - Simple Registers",
            "app_description_MD": "**Alpha** release of the Simple Register Tool",
            "version": "2.0.0",
            "path": {
                "server": {
                    "doc": "folder from which the server finds static files, relative to project",
                    "format": "String",
                    "default": "public/"
                },
                "narrative": {
                    "doc": "markdown file relative to server path",
                    "format": "String",
                    "default": "index.md"
                }
            }
        }
    },
    "version": {
        "format": "String",
        "default": "0.9.1"
    },
    "port": {
        "format": "int",
        "default": 3000
    },
    "registers": {
        "format": "Array",
        "default": [{
            "name": "Sample Register",
            "short_name": "SAMPLE",
            "url_prefix": "/_sample",
            "folder_path": "registers/sample_register",
            "isDisplayed": false
        }]
    },
    "static": {
        "format": "Object",
        "default": {
            "html": {
                "centered_start": "<div class=\"container\"><div class=\"row\">",
                "centered_end": "</div></div>",
                "left_gutter": "<div class=\"col col-1\"><!-- left gutter --></div>",
                "center_div": "<div id=\"lmt-rendering\" class=\"col-md-12\">",
                "right_gutter": "<div class=\"col-1\"><!-- right gutter --></div>",
                "full_width_start": "<div id=\"lmt-rendering\"><div class=\"container\"><div class=\"row\"><div class=\"col-md-auto\">",
                "full_width_end": "</div></div></div></div>"
            },
            "control-doc": "lmt-control.pdf",
            "control-doc-download": "smpte-st-xxxx(online):2020.pdf",
            "lmt": "lmt.xml",
            "lmt_ref": "lmt-ref.xml",
            "narrative": "lmt-narrative.md",
            "root": "dist",
            "schema": "lmt-schema.xsd",
            "template": "index.template.html",
            "style": {
                "diff": {
                    "added": " style=\"background:#ddffdd;\"",
                    "deleted": " style=\"background:#ffdddd;\"",
                    "unchanged": ""
                }
            }
        }
    },
    "url_prefix": {
        "doc": "A prfix to mount the server somewhere other than the root",
        "format": "String",
        "default": "/test"
    },
    "upload_folder": {
        "format": "String",
        "default": "/tmp"
    },
    "logging": {
        "format": "Object",
        "default": {
            "_help": "logging goes to stderr by default - see https://github.com/pinojs/pino/blob/HEAD/docs/transports.md",
            "level": "info",
            "log_requests": false
        }
    }
}